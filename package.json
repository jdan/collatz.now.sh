{
  "dependencies": {
    "express": "^4.17.1"
  },
  "scripts": {
    "//": "In dev you'll probably want to run watch and server in two windows",
    "watch": "bsb -make-world -w",
    "serve": "nodemon src/server.bs.js",
    "clean": "bsb -clean-world && rm -rf public",
    "///": "build + start for now.sh",
    "build": "bsb -make-world && mkdir -p public && cp src/*.bs.js public",
    "start": "node public/server.bs.js"
  },
  "devDependencies": {
    "bs-platform": "^7.0.1",
    "nodemon": "^2.0.2"
  }
}
